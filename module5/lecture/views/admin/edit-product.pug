extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        form.product-form(
            action=(edit ? "/admin/edit-product" : "/admin/add-product") 
            method="POST"
        )
            .form-control
                label(for="title") Title
                input(
                    type="text"
                    name="title"
                    id="title"
                    value=(edit ? product.title : null)
                )
            .form-control
                label(for="imageUrl") Image Url
                input(
                    type="text"
                    name="imageUrl"
                    id="imageUrl"
                    value=(edit ? product.imageUrl : null)
                )
            .form-control
                label(for="price") Price
                input(
                    type="number"
                    name="price"
                    id="price"
                    step="0.01"
                    value=(edit ? product.price : null)
                )
            .form-control
                label(for="description") Description
                textarea(
                    name="description"
                    id="description"
                    rows="5"
                ) #{edit ? product.description : null}
            if edit
                input(
                    type="hidden"
                    name="productId"
                    value=product.id
                )
            button.btn(type="submit") #{edit ? "Update Product" : "Add Product"}