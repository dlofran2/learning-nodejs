extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if products.length > 0
            .grid
                each product in products
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(
                                src="https://proxy.duckduckgo.com/iu/?u=http%3A%2F%2Fwhytoread.com%2Fwp-content%2Fuploads%2F2014%2F12%2Fbest-books.jpg&f=1"
                                alt="A book"
                            )
                        .card__content
                            h2.product__price $19.99
                            p.product__description Cillum duis dolor consectetur id veniam excepteur consequat.
                        .card__actions
                            button.btn Add to Cart
        else 
            h1 No products
