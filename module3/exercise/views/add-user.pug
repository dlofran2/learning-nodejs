extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/form.css")

block content
    main
        form(
            action="/add-user"
            method="POST"
        )
            .form-control
                label(for="username") User
                input(
                    type="text"
                    name="username"
                    id="username"
                )
                button.btn(type="submit") Add User